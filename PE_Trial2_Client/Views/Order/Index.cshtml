	<div class="row">
		<div class="col-md-3">
			<form method="get" action="@Url.Action("Index", "Order")">
				<div class="form-group">
					<label>Customer:</label>
					<ul class="list-group">
						<li class="list-group-item">
							<a href="@Url.Action("Index", "Order")" class="customer-filter-link">All</a>
						</li>
						@foreach (var customer in customers)
						{
							<li class="list-group-item">
								<a href="@Url.Action("Index", "Order", new { customerId = customer.CustomerId })" class="customer-filter-link">@customer.CustomerId</a>
							</li>
						}
					</ul>
				</div>
			</form>
		</div>

		<div class="col-md-9">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Id</th>
						<th>Customer Id</th>
						<th>Customer Name</th>
						<th>Emp Name</th>
						<th>Derpertment Name</th>
						<th>Order Date</th>
						<th>Required Date</th>
						<th>Shipped Date</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var order in orders)
					{
						<tr>
							<td>@order.OrderId</td>
							<td>@order.CustomerId</td>
							<td>
								@order.CustomerName
								<form method="post" action="@Url.Action("Delete", new { id = order.CustomerId })" style="display:inline">
									<button type="submit" style="border-radius:8px; text-decoration: none">Delete</button>
								</form>
							</td>
							<td>@order.EmployeeName</td>
							<td>@order.DepartmentName</td>
							<td>@order.OrderDate</td>
							<td>@order.RequiredDate</td>
							<td>@order.ShippedDate</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
